<div class="section {{css_classes}}">
    <span class="title">{{title}}</span>

    {{#if actions}}{{#each actions}}
        <button type="button" class="button secondary" data-action="{{action}}" data-args="{{args}}">{{text}}</button>
    {{/each}}{{/if}}

    <br/>

    {{#each cards}}
        <span class="card {{suit}} {{#if @first}}first{{/if}} {{#if @last}}last{{/if}} {{#if hidden}}hidden{{/if}}"
              data-card="{{index}}" data-action="lay">
            {{text}}
        </span>
    {{/each}}

    {{#if queer}}
        <span class="card {{queer.suit}}">{{queer.text}}</span>
    {{/if}}

</div>